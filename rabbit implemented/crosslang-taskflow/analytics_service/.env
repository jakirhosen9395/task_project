# =========================
# Database Configurations
# =========================

# Docker Compose Default (using service name)
MONGO_URI=mongodb://mongodb:27017

# Database name
DB_NAME=multi_lang_todo

# =========================
# Server Configurations
# =========================

# Service port
PORT=8003

# =========================
# RabbitMQ Configurations
# =========================

# Connection details (match with docker-compose)
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASS=securepassword123!  # Must match docker-compose
RABBITMQ_URL=amqp://${RABBITMQ_USER}:${RABBITMQ_PASS}@${RABBITMQ_HOST}:${RABBITMQ_PORT}/

# =========================
# Optional Health Check Config
# =========================

# HEALTH_CHECK_INTERVAL=30s
# METRICS_PORT=9090